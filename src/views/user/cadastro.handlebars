        <div class="form-group">
          <label for="whatsapp">WhatsApp</label>
          <input type="tel" class="form-control" name="whatsapp" placeholder="ex:5599999999999" required>
        </div>
        
        <div class="form-group">
          <label for="adress">Rua</label>
          <input type="text" class="form-control" name="adress" placeholder="Ex: Rua monte castelo" required>
        </div>
        <div class="form-group">
          <label for="CEP">CEP</label>
          <input type="text" class="form-control" name="CEP" placeholder="ex: 00000-000" required>
        </div>
        <div class="form-group">
          <label for="username">Usu√°rio para login:</label>
          <input type="text" class="form-control" name="username" placeholder="ex: usuario" required>
        </div>
        <div class="form-group">
          <label for="password">Crie uma senha:</label>
          <input type="password" class="form-control" name="password" placeholder="ex: ***********" required>
        </div>
